#!/usr/bin/env bash
set -e
if [[ ! -d "/home/beaver/Classes/2025-2026-Fall/CS456/Project2" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/beaver/Classes/2025-2026-Fall/CS456/Project2")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/beaver/Classes/2025-2026-Fall/CS456/Project2" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/beaver/Classes/2025-2026-Fall/CS456/Project2/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/beaver/Classes/2025-2026-Fall/CS456/Project2/.envrc" "/home/beaver/Classes/2025-2026-Fall/CS456/Project2/.direnv"/*.rc
